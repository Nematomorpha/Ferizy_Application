<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CekPemesananAct"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_blue">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Cek Pemesanan"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/kembali"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/left"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            app:tint="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_below="@id/navbar"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/ktk_1"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Email"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textColor="@color/black"
        android:layout_below="@id/ktk_1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/ktk_2"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_shadow">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan password"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"/>

    </RelativeLayout>










</RelativeLayout>