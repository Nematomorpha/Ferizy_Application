<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilAct"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_blue">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun Saya"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/kembali"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/left"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            app:tint="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ktk_1"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_shadow"
        android:layout_below="@id/navbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="informasi akun"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/ktk_3"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bb">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Kata Sandi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>



        </RelativeLayout>

        <View
            android:id="@+id/vw_1"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ktk_3"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/vw_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/ktk_4"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_below="@id/email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan Email"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>


        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ss_1"
        android:layout_width="380dp"
        android:layout_height="460dp"
        android:background="@drawable/rounded_shadow"
        android:layout_below="@id/ktk_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/kl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="informasi Personal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/ss_2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bb">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Profil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>



        </RelativeLayout>

        <View
            android:id="@+id/vw_2"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ss_2"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:layout_below="@id/vw_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/SS_3"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@id/nik"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1803010206030004"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:layout_below="@id/SS_3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <RelativeLayout
            android:id="@+id/SS_4"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@id/nama"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solih Hidayat"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_below="@id/SS_4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <RelativeLayout
            android:id="@+id/SS_5"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@id/kelamin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-Laki"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>



        </RelativeLayout>



        <TextView
            android:id="@+id/Tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:layout_below="@id/SS_5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>



        <RelativeLayout
            android:id="@+id/SS_6"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@id/Tanggal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-juni-2003"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>



        </RelativeLayout>


        <TextView
            android:id="@+id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:layout_below="@id/SS_6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/SS_7"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@id/nomor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="085664769184"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>



        </RelativeLayout>

        <TextView
            android:id="@+id/kabupaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota/Kabupaten"
            android:layout_below="@id/SS_7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/SS_8"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_below="@id/kabupaten"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_shadow">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kab.Lampung Utara"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>



        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="340dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Hapus Akun"
        android:textColor="@color/white"
        android:layout_below="@id/ss_1"
        android:background="@color/cardview_shadow_start_color"
        android:layout_marginTop="10dp"/>



    </RelativeLayout>